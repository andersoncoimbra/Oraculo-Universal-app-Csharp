<Page
    x:Class="Oraculo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Oraculo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,0,822,0">
    	<TextBox HorizontalAlignment="Left" Margin="10,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="524" Header="Nome:" TabNavigation="Cycle" PlaceholderText="Obrigatório"/>
    	<ComboBox x:Name="sig" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="10,153,0,0" VerticalAlignment="Top" Width="524" Header="Seu Signo:"/>
    	<Button Click="gera" Content="Qual é minha sorte?" HorizontalAlignment="Left" Margin="7,246,0,0" VerticalAlignment="Top" Width="530"/>
        <TextBlock x:Name="text" Grid.Row="3" FontSize="50" Text="Texto de Exemplo" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"/>

    </Grid>
</Page>
